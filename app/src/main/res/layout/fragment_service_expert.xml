<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_round_color"
            android:drawableLeft="@drawable/ic_keyboard_arrow_left"
            android:gravity="center"
            android:paddingStart="5dp"
            android:text="Create Service Expert"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_round_color"
            android:drawableRight="@drawable/ic_keyboard_arrow_right"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:text="Service Expert Status"
            android:textColor="@color/white" />


    </RelativeLayout>

</LinearLayout>